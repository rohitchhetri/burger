<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
	        <h1>Burger App</h1>
	        <p></p>
	    </div>
  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2 id="headleft">Burgers Available!</h2>
			<hr >

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li class="burgerav">
			      	{{this.id}}
			        {{this.burger_name}}

			        <form action="/{{this.id}}?_method=PUT" method="POST">
			          <input type="hidden" name="devoured" value="true">
			          <button class="btn-primary" type="submit">Devour It!</button>
			        </form>

			      </li>
			    {{/unless}}
			  {{/each}}
			</ul>

	    </div>
			<h2 id="header">Already Eaten Burgers</h2>
	    <div class="col-sm-6 eaten">
			<hr >
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	<!-- end .row -->

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add New Burger!</h2>

			<form class="formClass" action="/" method="POST">

			  <div class="form-group">
			    <p>Enter New Burger.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary-submit" type="submit">Sumbit Order</button>
			</form>

	    </div>
	
  	</div>
	<!-- end .row -->

</div>